<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Quiz_part.Tasbeeh">

    <ImageView
        android:id="@+id/image_id"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_centerInParent="true"
        android:src="@drawable/image"
        android:elevation="45dp"
        ></ImageView>

    <TextView
        android:id="@+id/text2_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:elevation="60dp"
        android:gravity="center_horizontal"
        android:text="00"
        android:textAlignment="center"
        android:textColor="#0E8193"
        android:textSize="62dp"
        app:fontFamily="sans-serif-condensed-light"></TextView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="85dp"
        android:layout_centerHorizontal="true"
        >
        <EditText
            android:layout_width="250dp"
            android:layout_height="46dp"
            android:gravity="center_horizontal"
            android:inputType="numberDecimal"
            android:hint="Target"
            android:textColor="@android:color/white"
            android:id="@+id/text3_id"
            android:textAlignment="center"
            android:background="@drawable/rounded_shape_edittext"
            android:textSize="36dp"
            ></EditText>

        <Button
            android:id="@+id/save_button_id"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:textSize="26dp"
            android:layout_toRightOf="@+id/text3_id"
            android:background="@drawable/rounded_button"
            android:text="SET"
            app:fontFamily="sans-serif-condensed"
            android:textColor="@android:color/white"></Button>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/image_id"
        android:layout_marginTop="65dp"
        android:layout_centerHorizontal="true"
        >
        <Button
            android:id="@+id/progress_button_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark"
            android:textColor="@android:color/white"
            android:layout_toLeftOf="@+id/tasbeeh_click_button"
            android:layout_marginRight="35dp"
            android:layout_centerVertical="true"
            android:text="Progress"></Button>
        <Button
            android:id="@+id/tasbeeh_click_button"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:background="@drawable/click_circle_button"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"
            android:text="clik here"></Button>

        <Button
            android:id="@+id/reset_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark"
            android:textColor="@android:color/white"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tasbeeh_click_button"
            android:layout_marginLeft="35dp"
            android:text="RESET" />

    </RelativeLayout>

</RelativeLayout>