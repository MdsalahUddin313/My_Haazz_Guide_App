<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".About_us">

    <ImageView
        android:id="@+id/image"
        android:layout_marginTop="45dp"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/nabid_logo"
        android:layout_height="wrap_content">
    </ImageView>
    <LinearLayout
        android:id="@+id/l_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_marginLeft="25dp"
        android:padding="15dp"
        android:orientation="vertical">
    <TextView
        android:id="@+id/istiaq_vai_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Istiaq Ahmed"
        android:textStyle="bold"
        android:textColor="@color/bacground"
        android:textSize="35dp"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/istiaq_vai_title"
        android:id="@+id/istiaq_vai"
        android:text="Senior UI/UX designer and  Java Developer"
        ></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="25dp"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l_one"
        android:id="@+id/l_two"
        android:orientation="vertical">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Mahmuda Akhi"
            android:textStyle="bold"
            android:textColor="@color/bacground"
            android:textSize="35dp"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/istiaq_vai_title"
            android:text="Senior Java Developer"
            ></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="25dp"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l_two"
        android:id="@+id/l_three"
        android:orientation="vertical">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nabid Bhuyia"
            android:textStyle="bold"
            android:textColor="@color/bacground"
            android:textSize="35dp"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/istiaq_vai_title"
            android:text="Project Manager"
            ></TextView>
    </LinearLayout>

</RelativeLayout>