<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_two"
    tools:context=".Fragments.Books">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/prothomALo_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:elevation="35dp"
                app:cardCornerRadius="15dp">

                <RelativeLayout
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp">

                    <ImageButton
                        android:id="@+id/button1"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:background="@drawable/prothom_alo"></ImageButton>

                    <TextView
                        android:id="@+id/title_prothom_alo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:layout_marginRight="5dp"
                        android:layout_toRightOf="@+id/button1"
                        android:padding="5dp"
                        android:text="Hajj Guide"
                        android:textColor="@android:color/black"
                        android:textSize="25dp">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title_prothom_alo"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/button1"
                        android:text="By Prothom Alo"
                        android:textColor="@android:color/darker_gray">

                    </TextView>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prothomALo_id"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:elevation="35dp"
                app:cardCornerRadius="15dp">

                <RelativeLayout
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp"
                    >

                    <ImageButton
                        android:id="@+id/button2"
                        android:layout_width="150dp"
                        android:layout_marginLeft="5dp"

                        android:layout_height="200dp"
                        android:background="@drawable/mushfikur_book" />

                    <TextView
                        android:id="@+id/title_mushfikur_rahman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:layout_toRightOf="@+id/button2"
                        android:padding="5dp"
                        android:text="Hajj umra Guide"
                        android:textColor="@android:color/black"
                        android:textSize="25dp">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title_mushfikur_rahman"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/button2"
                        android:text="By Mushfikur Rahman"
                        android:textColor="@android:color/darker_gray">

                    </TextView>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:elevation="35dp"
                app:cardCornerRadius="15dp"
                android:layout_marginBottom="75dp"
                android:layout_below="@+id/button">

                <RelativeLayout
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp"
                    >

                    <ImageButton
                        android:id="@+id/button4"
                        android:layout_width="300dp"
                        android:layout_height="200dp"
                        android:layout_margin="15dp"
                        android:background="@drawable/shotcut" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>