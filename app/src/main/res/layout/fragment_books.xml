<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Books">

    <ImageButton
        android:id="@+id/prothomALo_id"
        android:layout_width="150dp"
        android:background="@drawable/prothom_alo"
        android:layout_height="200dp"
        android:elevation="5dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageButton>

    <ImageButton
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:elevation="5dp"
        android:text="Button"
        android:background="@drawable/mushfikur_book"
        app:layout_constraintBottom_toBottomOf="@+id/prothomALo_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/prothomALo_id"
        app:layout_constraintTop_toTopOf="@+id/prothomALo_id"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/button3"
        android:layout_width="335dp"
        android:layout_height="336dp"
        android:elevation="5dp"
        android:background="@drawable/shotcut"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prothomALo_id" />


</androidx.constraintlayout.widget.ConstraintLayout>